{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-config-airbnb"
  ],
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/codelyzer"
  ],
  "rules": {
    "align": [false, "parameters"],
    "no-empty": [false],
    "no-console": [false, "log"],
    "no-duplicate-imports": true,
    "no-jasmine-focus": true,
    "no-var-keyword": true,
    "semicolon": [true],
    "variable-name": [true, "ban-keywords"],
    "no-inner-declarations": [true, "function"],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "max-lines": ["warn", 300],
    "max-line-length": [true, 120],
    "prefer-array-literal": [false],
    "array-type": [false],
    "no-submodule-imports": false,
    "curly": [true, "ignore-same-line"],
    "prefer-template": true,
    "indent": [
      true,
      "spaces"
    ],
    "eofline": true,
    "arrow-return-shorthand": true,
    "import-spacing": true,
    "component-selector": [
      true,
      "element",
      "",
      "kebab-case"
    ],
    "typedef": [true, "arrow-parameter", "parameter", "call-signature"],
    "jsdoc-format": [false],
    "object-literal-sort-keys": false,
    "object-shorthand-properties-first": false,
    "strict-boolean-expressions": [false],
    "member-access": false,
    "interface-name": [false],
    "whitespace": [true, "check-decl", "check-module", "check-type", "check-preblock", "check-operator"],
    "no-empty-line-after-opening-brace": true,
    "max-classes-per-file": false
  }
}
